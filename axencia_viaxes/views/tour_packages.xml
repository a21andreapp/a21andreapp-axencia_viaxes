<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='agency_places_action' model='ir.actions.act_window'>
        <field name="name">Paquetes turísticos</field>
        <field name="res_model">agency.place</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'kanban_view_ref': 'axencia_viaxes.kanban_travel'}</field>
    </record>

    <menuitem name="Axencia de viaxes" id="agency_places_base_menu" />
    <menuitem name="Paquetes turísticos" id="agency_places_menu" parent="agency_places_base_menu" action="agency_places_action"/>

    <!-- Form View -->
    <record id="proxecto_view_form" model="ir.ui.view">
      <field name="name">Formulario Proxecto</field>
      <field name="model">agency.place</field>
      <field name="arch" type="xml">
        <form>
          <!-- <header>
            <button name="make_finished" string="Rematado" type="object"/>
            <button name="make_started"  string="Comezado" type="object"/>
            <button name="make_cancelled"  string="Cancelado" type="object"/>
            <button name="make_pending"  string="Pendente" type="object"/>
            <field name="state" widget="statusbar"/>
          </header> -->
          <group>
            <group>
              <field name="name"/>
              <field name="description"/>
              <field name="actividad"/>
              <field name="num_persoas"/>
            </group>
          </group>
        </form>
      </field>
  </record>

  <!-- Tree(list) View -->
  <record id="proxecto_view_tree" model="ir.ui.view">
        <field name="name">Lista de proxectos</field>
        <field name="model">agency.place</field>
        <field name="arch" type="xml">
            <tree>
              <field name="name"/>
              <field name="description"/>
              <field name="actividad"/>
              <field name="num_persoas"/>
            </tree>
        </field>
  </record>

  <!-- Search View -->
  <record id="proxecto_view_search" model="ir.ui.view">
    <field name="name">Búsqueda de proxectos</field>
    <field name="model">agency.place</field>
    <field name="arch" type="xml">
      <search>
        <field name="name"/>
        <field name="num_persoas"/>
      </search>
    </field>
  </record>

  <!-- Kanban View -->
  <record id="kanban_travel" model="ir.ui.view">
    <field name="name">agency.place.kanban</field>
    <field name="model">agency.place</field>
    <field name="arch" type="xml">
      <kanban default_group_by="name">
        <field name="name"/>
        <templates>
          <t t-name="kanban-box">
            <div class="oe_kanban_card oe_kanban_global_click">
              <field name="actividad"/>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>
</odoo>